<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.zhongjingxiong.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <!--  url调用的action就是add ， parttern必须写成/add， 和AddServlet对应上     -->
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
<!--    用户发请求，action=add
        先找mapping后找servlet中实际java写的那个类
        项目中，web.xml找到url-pattern = /add 第12行
        接着找到11行的servlet-name = AddServlet
        相当于一个servlet-name对应前后端
--> <servlet>
        <servlet-name>Demo01Servlet</servlet-name>
        <servlet-class>com.zhongjingxiong.servlets.Demo01Servlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Demo01Servlet</servlet-name>
        <!--  url调用的action就是add ， parttern必须写成/add， 和AddServlet对应上     -->
        <url-pattern>/demo1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Demo02</servlet-name>
        <servlet-class>com.zhongjingxiong.servlets.Demo02</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>Demo02</servlet-name>
        <!--  url调用的action就是add ， parttern必须写成/add， 和AddServlet对应上     -->
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Demo03</servlet-name>
        <servlet-class>com.zhongjingxiong.servlets.Demo03</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Demo03</servlet-name>
        <!--  url调用的action就是add ， parttern必须写成/add， 和AddServlet对应上     -->
        <url-pattern>/demo3</url-pattern>
    </servlet-mapping>
</web-app>